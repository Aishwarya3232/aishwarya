<% @article.comments.each do |comment| %>
	<div class="comments-listing row">
		<div class="col-sm-2">
			<strong><%=comment.user_name%> :</strong>
		</div>
		<div class="col-sm-7">
			<%=comment.description%>
			<% if logged_in? and (current_user.id == @article.user.id || comment.user_id == current_user.id) %>
				<%= link_to "X", delete_comment_path(id: @article.id, comment: comment.id), class: "btn btn-danger btn-xs", method: :delete, remote: true %>	
			<% end %>
		</div>
		<div class="col-sm-3">
			<small><%=time_ago_in_words(comment.created_at)%> ago </small>
		</div>
	</div>
<% end %>
<%= form_tag add_comment_path(id: @article.id), remote: true, method: :post, id: "article-comment-form" do %>
	<div class="form-group">
		<div class="col-sm-10">
			<%= text_field_tag :comment, params[:comment], placeholder: "Enter comment", value: "", class: "form-control" %>
		</div>
		<div class="col-sm-2">
			<%= button_tag(type: :submit, class: "btn btn-default") do%>
				Post
			<% end %>
		</div>
	</div>
<% end %>