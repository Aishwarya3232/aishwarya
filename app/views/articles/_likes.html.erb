<div class="likebtn">	
	<% if logged_in? %>
		<% if @article.likes?(current_user) %>
			<%= link_to add_like_path(id: @article.id), remote: true, method: :post, class: "thumbs-success" do %>
				<i class="fa fa-thumbs-up"></i>
			<% end %>
		<% else %>
			<%= link_to add_like_path(id: @article.id), remote: true, method: :post, class: "thumbs-neutral thumbs-success" do %>
				<i class="fa fa-thumbs-up"></i>
			<% end %>
		<% end %>
		<%= @article.num_likes %>
		<% if @article.dislikes?(current_user) %>
			<%= link_to add_dislike_path(id: @article.id), remote: true, method: :post, class: "thumbs-danger" do %>
				<i class="fa fa-thumbs-down"></i>
			<% end %>
		<% else %> 
			<%= link_to add_dislike_path(id: @article.id), remote: true, method: :post, class: "thumbs-neutral thumbs-danger" do %>
				<i class="fa fa-thumbs-down"></i>
			<% end %>
		<% end %>
		<%= @article.num_dislikes %>
	<% else %>
		<i class="fa fa-thumbs-up thumbs-success"></i><%= @article.num_likes %>
		<i class="fa fa-thumbs-down thumbs-danger"></i><%= @article.num_dislikes %>
	<% end %>
</div>