<h1 align="center">Listing all categories</h1>
<div align="center">
<%= will_paginate @category%>
<% @category.each do |category| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li class="article-title">
					<%=link_to "#{category.name}", category_path(category)%>
				</li>
				<% art_count = category.articles.count %>
				<% if art_count > 0 %>
					<% category.articles.each do |art| %>
						<li><%= link_to "#{art.title}", article_path(art)%>, Created by <%="#{art.user.username}(#{art.user.email})"%></li>
					<% end %>
				<% end %>
				<li><small><%= pluralize(art_count,"article")%></small></li>
			</div>
		</div>
	</ul>
<% end %>

<%= will_paginate @category%>

</div>